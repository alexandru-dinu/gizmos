set statusbar-bg            "#181818"
set statusbar-fg            "#93a1a1"

set inputbar-bg             "#181818"
set inputbar-fg             "#93a1a1"

set index-bg                "#181818"
set index-fg                "#93a1a1"
set index-active-bg         "#657b83"
set index-active-fg         "#eee8d5"

set notification-bg         "#181818"
set notification-fg         "#93a1a1"
