set font "Iosevka Fixed SS09 10"

set recolor               true
set recolor-keephue       true
set window-title-basename true
set statusbar-basename    false
set selection-clipboard   clipboard

map <C-i> recolor
map j     navigate next
map k     navigate previous

# colors
set default-bg              "#181818"
