set font "Iosevka Fixed SS09 10"

set default-bg              "#181818"
set default-fg              "#d0d0d0"
set statusbar-bg            "#181818"
set statusbar-fg            "#d0d0d0"
set inputbar-bg             "#181818"
set inputbar-fg             "#d0d0d0"
set notification-bg         "#383838"
set notification-fg         "#d0d0d0"
set recolor-lightcolor      "#181818"
set recolor-darkcolor       "#d0d0d0"
set highlight-color         "#16a085"
set highlight-active-color  "#a01631"
set completion-highlight-bg "#16a085"

set recolor                 true
set recolor-keephue         true
set window-title-basename   true
set statusbar-basename      false
set selection-clipboard     clipboard

map <C-i> recolor
map j navigate next
