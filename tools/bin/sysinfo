#!/bin/bash

# mostly used for the status-bar in tmux

case "$1" in
    --host)
        echo $(whoami) @ $(hostname)
        ;;
    --ram)
        echo ram: $(free -mh | awk '(NR==2){print $7}' | tr -d 'i')
        ;;
    --ssd)
        echo ssd: $(df | awk '(NR>1){t+=$4} END {printf "%dG", t/1024/1024}')
        ;;
    --load)
        echo load: $(cut -d' ' -f1-3 /proc/loadavg)
        ;;
    *)
        ;;
esac
