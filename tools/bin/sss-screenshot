#!/bin/bash

cmd_base="dunstify -a $(basename "$0") -r 999003 -u normal -t 2000"

case "$1" in
    --selection)
        maim --select | xclip -selection clipboard -t image/png
        $cmd_base "Copied screenshot to clipboard."
        ;;

    --full)
        imgpath="$HOME/screenshots/$(date +%s).png"
        maim "$imgpath"
        $cmd_base "Saved screenshot to $imgpath."
        ;;

    *)
        echo "Unknown command '$1'." && exit 1
        ;;
esac
