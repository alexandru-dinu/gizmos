#!/bin/bash

# Bluetooth headphones

set -ex

sudo systemctl start bluetooth.service

blueman-applet 2> /dev/null & disown

read -p "Press enter after successful connection"

pacmd list-sinks | grep 'index' -A 1

read sink

pacmd set-default-sink $sink

kill -9 "$(pidof volumeicon)" && volumeicon & disown

mpris-proxy&
