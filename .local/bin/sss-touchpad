#!/bin/bash

# Unified touchpad options
# To be used with e.g. i3

set -ex

xinput set-prop \
    "SynPS/2 Synaptics TouchPad" "libinput Tapping Enabled" 1
xinput set-prop \
    "SynPS/2 Synaptics TouchPad" "libinput Natural Scrolling Enabled" 1
xinput set-prop \
    "pointer:Logitech K400 Plus" "libinput Natural Scrolling Enabled" 1
