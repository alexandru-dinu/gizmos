partitions: 
	/ (ext4): 301852 MB
	swap: 16384 MB
	bootloader location = efi partition

wifi-fix: sudo echo "blacklist ideapad_laptop" >> /etc/modprobe.d/blacklist.conf

nvidia-driver: 
- install from additional drivers 
- check: nvidia-smi / lspci | grep -i nvidia / glxinfo | head

